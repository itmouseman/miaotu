<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/home_fenLei_refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">

            <com.scwang.smart.refresh.header.FalsifyHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#F7F7F7"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="请上传清晰无任何水印涂鸦的图片，最多可添加三张"
                        android:textColor="#000000"
                        android:textSize="12sp"></TextView>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_addMiaoMu_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        android:overScrollMode="never"
                        android:paddingTop="15dp"
                        android:paddingBottom="20dp" />

                    <!--                添加苗木名称-->
                    <LinearLayout
                        android:id="@+id/ll_base_info_demand_name"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="13dp">

                            <TextView
                                android:id="@+id/tv_base_info_demand_name"
                                android:layout_width="wrap_content"
                                android:layout_height="29dp"
                                android:gravity="center_vertical"
                                android:hint="添加苗木名称"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_base_info_demand_alias_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_8"
                                android:text=" "
                                android:textColor="@color/text_color_33"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:hint=""
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:src="@mipmap/ic_base_next" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white_color"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"

                            android:text="分类选择"
                            android:textColor="#000000"
                            android:textSize="15sp"

                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcy_flow_addMm_fenLei"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcy_flow_addMm_fenLeiSecond"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#F7F7F7"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="规格（至少填二种）"
                        android:textColor="#000000"
                        android:textSize="12sp"></TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_guige"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white_color"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="种植类型"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_plantType"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            zhy:max_select="1"></androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="库存"
                            android:textColor="#000000"
                            android:textSize="@dimen/textSize_15"

                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="(必填)"
                            android:textColor="#333333"
                            android:textSize="12sp"></TextView>

                        <EditText
                            android:id="@+id/et_kuCun_Num"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:background="@null"
                            android:hint="0"
                            android:gravity="center"
                            android:maxLength="15"
                            android:phoneNumber="true"
                            android:singleLine="true"
                            android:textColor="#333333"
                            android:textSize="15sp"></EditText>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="株"
                            android:textColor="#333333"
                            android:textSize="@dimen/textSize_12"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold"></TextView>


                        <EditText
                            android:id="@+id/et_MiaoMu_price"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/et_send_demand_bg"
                            android:hint="@string/text_ShuruShuZhi"
                            android:maxLength="15"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="@dimen/textSize_12"></EditText>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="元"
                            android:textColor="#333333"
                            android:textSize="12sp"></TextView>

                        <CheckBox
                            android:id="@+id/rb_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:button="@drawable/radiobutton_icon"
                            android:checked="true"
                            android:padding="10dp"
                            android:text=" 面议" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/white_color"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="普通/清货/精品"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_quality_1"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_green_demand_4"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="普通"
                                android:textColor="@color/white_color" />

                            <TextView
                                android:id="@+id/tv_quality_2"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_gray_demand_4"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="清货"
                                android:textColor="@color/colorBlack333" />

                            <TextView
                                android:id="@+id/tv_quality_3"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_gray_demand_4"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="精品"
                                android:textColor="@color/colorBlack333" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="苗木编号"
                            android:textColor="#000000"


                            android:textSize="15sp"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:id="@+id/et_MiaoMu_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:hint="请输入苗木编号"
                            android:text=""
                            android:maxLength="15"
                            android:singleLine="true"
                            android:phoneNumber="true"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="15sp"></EditText>
                    </LinearLayout>


                    <!--苗木描述-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white_color"
                        android:paddingLeft="15dp"

                        android:paddingRight="15dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="苗木描述"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/et_miaomu_describe"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="left|top"
                            android:hint="输入苗木描述"
                            android:maxEms="200"
                            android:maxLength="200"
                            android:padding="8dp"
                            android:textColor="#999999"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_mm_describe_max_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:background="@color/white_color"
                        android:gravity="right"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:text="0/200"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <com.scwang.smart.refresh.header.FalsifyFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <TextView
            android:id="@+id/tv_base_info_demand_send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_green_company_50"
            android:gravity="center"
            android:text="立即发布"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </FrameLayout>


</LinearLayout>
