<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:background="@drawable/shape_white_circle_10"
        android:orientation="vertical"
        android:paddingTop="85dp">

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="检测到版本更新，请下载体验。"
                android:textColor="#FF05C1B0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_upload_app_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:minHeight="120dp"
                android:text="1.全新首页，最新活动、每日优质资讯推荐，精 彩不断。"
                android:textColor="#FF5A5A5A" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/shape_common_green_circle_5"
                android:gravity="center"
                android:text="立即下载"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.widget.miaotu.common.utils.ui.NumberProgressBar
                android:id="@+id/download"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="全新版本正在更新中..."
                android:textColor="#FF05C1B0"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:src="@mipmap/bg_upload_logo" />

</RelativeLayout>