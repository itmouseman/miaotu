<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_guige_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="胸径"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_guige_must_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(必填)"
                android:visibility="gone"
                android:textColor="@color/text_color_33"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:hint=""
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_guige_1"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:background="@drawable/et_send_demand_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            />
        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#ff999999" />
        <EditText
            android:id="@+id/et_guige_2"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:background="@drawable/et_send_demand_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            />
        <TextView
            android:id="@+id/tv_guige_unit"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:text="厘米"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:textColor="#ff333333"
            android:textSize="12sp">
        </TextView>
    </LinearLayout>
</LinearLayout>
