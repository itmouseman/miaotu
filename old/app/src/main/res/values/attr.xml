<resources>
    <attr name="app_primary_color" format="color" /> <!-- topbar -->
    <attr name="app_content_bg_color" format="color" /> <!-- content-->

    <declare-styleable name="Search_View">
        <attr name="textSizeSearch" format="dimension"  />
        <attr name="textColorSearch" format="color" />
        <attr name="textHintSearch" format="string" />
        <attr name="searchBlockHeight" format="integer" />
        <attr name="searchBlockColor" format="color" />
    </declare-styleable>

    <!-- 可以画背景的TextView -->
    <declare-styleable name="ShapeTextView">
        <attr name="radiusT" format="dimension" />
        <attr name="bottomLeftRadiusT" format="dimension" />
        <attr name="bottomRightRadiusT" format="dimension" />
        <attr name="topLeftRadiusT" format="dimension" />
        <attr name="topRightRadiusT" format="dimension" />
        <attr name="solidColorT" format="color" />
        <attr name="strokeWidthT" format="dimension" />
        <attr name="strokeColorT" format="color" />
        <attr name="dashWidthT" format="dimension" />
        <attr name="dashGapT" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FlowTagLayout">
        <attr name="item_leftMargin" format="dimension" />
        <attr name="item_rightMargin" format="dimension" />
        <attr name="item_topMargin" format="dimension" />
        <attr name="item_bottomMargin" format="dimension" />
        <attr name="item_leftPadding" format="dimension" />
        <attr name="item_rightPadding" format="dimension" />
        <attr name="item_topPadding" format="dimension" />
        <attr name="item_bottomPadding" format="dimension" />
        <attr name="item_background" format="reference" />
        <attr name="item_textSize" format="dimension" />
        <attr name="item_textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CountDownProgress">
        <!-- 圆实心的颜色 -->
        <attr name="circSolidColor" format="color"></attr>
        <!-- 圆边框的颜色 -->
        <attr name="circFrameColor" format="color"></attr>
        <!-- 进度条的颜色 -->
        <attr name="progressColor2" format="color"></attr>
        <!-- 文字的颜色 -->
        <attr name="textColor" format="color"></attr>
    </declare-styleable>

</resources>