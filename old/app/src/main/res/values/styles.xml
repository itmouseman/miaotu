    <!--&lt;!&ndash; 默认图片资源，默认值为 null &ndash;&gt;-->
    <!--<attr name="android:src"/>-->
    <!--&lt;!&ndash; 是否是圆形，默认值为 false &ndash;&gt;-->
    <!--<attr name="bga_iv_circle" format="boolean"/>-->
    <!--&lt;!&ndash; 圆角矩形的半径，默认值为 0dp &ndash;&gt;-->
    <!--<attr name="bga_iv_cornerRadius" format="reference|dimension"/>-->
    <!--&lt;!&ndash; 是否是矩形，默认值为 false &ndash;&gt;-->
    <!--<attr name="bga_iv_square" format="boolean"/>-->
    <!--&lt;!&ndash; 描边的宽度，默认值为 0dp &ndash;&gt;-->
    <!--<attr name="bga_iv_borderWidth" format="reference|dimension"/>-->
    <!--&lt;!&ndash; 描边的颜色，默认值为 Color.WHITE &ndash;&gt;-->
    <!--<attr name="bga_iv_borderColor" format="reference|color"/>-->
    <!--</declare-styleable>-->


    <!-- 中间弹出框 -->
    <style name="dialog_center" parent="Theme.AppCompat.Dialog.Alert">
        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- 设置是否可滑动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景 -->
        <!-- 窗口背景 -->
        <!--<item name="android:windowBackground">#00000000</item>-->
        <!-- 是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 点击空白部分activity不消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!--输入框样式-->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">10dp</item>
        <!--item name="android:drawableBottom">@drawable/edittext_line</item-->
        <item name="android:textColorHint">@color/text_color_99</item>
        <item name="android:singleLine">true</item>
    </style>


    <declare-styleable name="CustomEditTextStyle">
        <attr name="text_hint" format="string" />
        <attr name="edit_style" format="reference|integer" />
        <attr name="edit_input_length" format="reference|integer" />
        <attr name="edit_input_type" format="string" />
    </declare-styleable>

    <!--界面分割线的样式-->
    <style name="cut_off_rule_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorGrayF2F6F9</item>
    </style>
</resources>