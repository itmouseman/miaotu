<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/include_titlebar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input_customname"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入自定义职位，比如：项目管理员、施工人员"
            android:maxLength="8"
            android:textColorHint="#999999"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_position_clear"
            android:padding="17dp"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:src="@mipmap/cp_icon_clear_all" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="14dp"
        android:lineSpacingExtra="5dp"
        android:text="每次只能添加一个职位，最多可添加3个自定义职位，每个职位字
        数不超过8个。"
        android:textColor="#ff999999"
        android:textSize="12sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_position_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/colorWhite">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>