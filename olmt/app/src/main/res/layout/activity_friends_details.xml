<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/qui_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fitsSystemWindows="true"
        />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.widget.miaotu.common.utils.rclayout.RCImageView
                    android:id="@+id/rcv_friend_detail_head"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"

                    android:scaleType="centerCrop"
                    android:src="@color/colorAccent"
                    app:round_as_circle="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_friends_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 苗小二苗小二苗小二苗小二苗 二苗小二 "
                        android:textColor="#333333"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="地区：浙江 杭州"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingTop="5dp">

                <View
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp" />

                <ImageView
                    android:id="@+id/tv_friends_detail_sex"
                    android:layout_width="23dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="15dp"
                    android:src="@color/red"
                    />

                <com.widget.miaotu.common.utils.ShapeTextView
                    android:id="@+id/stv_friends_detail_rz"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                   android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="实名"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    app:radiusT="8dp"
                    app:solidColorT="#00CAB8" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_friends_jump_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="所属企业"
                    android:textColor="@color/colorBlack333"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_friends_detail_company"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/me_info_margin"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="杭州马后科技有限公司"
                    android:textColor="@color/colorBlack333"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="所在职位"
                    android:textColor="@color/colorBlack333"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_friends_detail_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/me_info_margin"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="工程师"
                    android:textColor="@color/colorBlack333"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_arrow_right"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_color"
                android:gravity="center"
                android:orientation="horizontal">

                <com.widget.miaotu.common.utils.ShapeTextView
                    android:id="@+id/stv_friends_detail_add_friends"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="加好友"
                    app:radiusT="18dp"
                    android:textColor="@color/white_color"
                    app:solidColorT="@color/colorAccent" />

                <com.widget.miaotu.common.utils.ShapeTextView
                    android:id="@+id/stv_friends_detail_message"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="发消息"
                    app:radiusT="18dp"
                    android:textColor="@color/white_color"
                    app:solidColorT="@color/colorAccent" />

                <com.widget.miaotu.common.utils.ShapeTextView
                    android:id="@+id/stv_friends_detail_call"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="打电话"
                    app:radiusT="18dp"
                    android:textColor="@color/white_color"
                    app:solidColorT="#009EF1" />
            </LinearLayout>
        </LinearLayout>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</LinearLayout>
