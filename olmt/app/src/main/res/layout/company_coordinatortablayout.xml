<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@drawable/appbarlayout_elevated"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbarlayout"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="imgage"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:layout_collapseMode="parallax" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/white_color"
                    android:layout_alignParentBottom="true"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"

                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:padding="14dp">

                            <TextView
                                android:id="@+id/tv_company_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="80dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="浙江省青木苗圃浙江省青木苗圃青木苗圃"
                                android:textColor="#ff333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_me_real_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_green_company_auth_true"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="已认证"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="3dp"
                                    android:textColor="#ffffffff"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_company_fans_num"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:text="粉丝数：124"
                                    android:textColor="#ff333333"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_company_follow"
                                    android:layout_width="53dp"
                                    android:layout_height="22dp"
                                    android:background="@drawable/bg_green_company_follow_true"
                                    android:gravity="center"
                                    android:text="关注"
                                    android:textColor="@color/color00cab8"
                                    android:textSize="12sp" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_company_main_camp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="主营：香樟、桂花、红叶石楠、景观设计、景观设计。主营：香樟、桂花、红叶石楠、景观设计、景观设计。"
                                android:textColor="@color/text_color_99"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <com.widget.miaotu.common.utils.rclayout.RCImageView
                    android:id="@+id/iv_company_logo"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="25dp"
                    android:src="@mipmap/ic_company_detail_logo"
                    app:round_corner="10dp"
                    app:stroke_width="1dp" />


            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:titleMarginTop="15dp" />

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayout"
                            style="@style/TabLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_gravity="bottom"
                            app:tabBackground="@color/white_color"
                            app:tabSelectedTextColor="@color/colorAccent"
                            app:tabTextColor="@color/black" />

<!--            <com.flyco.tablayout.SlidingTabLayout-->
<!--                android:id="@+id/tabLayout"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="1dp"-->
<!--                android:background="@color/white_color"-->
<!--                app:tl_indicator_color="@color/colorAccent"-->
<!--                app:tl_indicator_height="2dp"-->
<!--                app:tl_indicator_margin_bottom="8dp"-->
<!--                app:tl_indicator_width="10dp"-->
<!--                app:tl_tab_space_equal="true"-->
<!--                app:tl_divider_width="30dp"-->
<!--                android:layout_gravity="bottom"-->
<!--                app:tl_textSelectColor="@color/colorAccent"-->
<!--                app:tl_textUnselectColor="#333333"  />-->


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

</merge>