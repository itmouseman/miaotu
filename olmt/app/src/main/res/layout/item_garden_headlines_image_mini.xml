<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_gh_img_mini_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ellipsize="end"
        android:enabled="true"
        android:maxLines="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_tv_gh_img_mini1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_tv_gh_img_mini2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="fitXY" />

        <com.widget.miaotu.common.utils.rclayout.RCImageView
            android:id="@+id/iv_tv_gh_img_mini3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:round_corner="3dp"
            android:scaleType="fitXY" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_gh_img_mini_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="中国花木王  89阅读  1小时前"
        android:textColor="#878787"
        android:maxLines="1"
        android:enabled="true"
        android:ellipsize="end"
        android:textSize="11sp" />

</LinearLayout>
