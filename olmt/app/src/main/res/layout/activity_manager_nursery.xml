<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#00000000"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_titlebar" />

        <com.qmuiteam.qmui.widget.tab.QMUITabSegment
            android:id="@+id/tabs_manager_nursery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_tab_height"
            android:layout_marginTop="-1dp"
            android:background="@color/white_color"
            android:textSize="12sp"
            app:qmui_tab_icon_position="top"
            app:qmui_tab_normal_text_size="14sp"
            app:qmui_tab_selected_text_size="16sp"

            app:qmui_topDividerColor="@color/white_color"
            app:qmui_topDividerHeight="0px" />


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_manager_nursery"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:background="@color/white_color" />

    </LinearLayout>

</LinearLayout>




