<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <com.widget.miaotu.common.utils.rclayout.RCImageView
        android:id="@+id/rctv_add_miaoyou_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="center"
        android:src="@color/color0ECDBC"
        app:round_corner="22dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="13sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_miao_you_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#333333"

            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_add_miao_you_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#999999"

            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_add_miao_you_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#999999"

            android:textSize="12sp" />
    </LinearLayout>

    <com.widget.miaotu.common.utils.ShapeTextView
        android:id="@+id/stv_add_miaoyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="加好友"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:radiusT="5dp"
        app:solidColorT="@color/color0ECDBC" />
</LinearLayout>
